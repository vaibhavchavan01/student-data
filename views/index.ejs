<%- include ('./partials/header.ejs')%>
    <!-- <h1>Home Page</h1> -->
    <div class="container">
        <div class="row">
            <div class="col-sm-6 mt-5">
                <h2 class="alert alert-success text-center">Add New Student</h2>
                <form method="post">
                    <div class="mb-3">
                        <label for="name" class="form-label">Name:</label>
                        <input type="text" class="form-control" id="name" name="name">
                    </div>
                    <div class="mb-3">
                        <label for="age" class="form-label">age:</label>
                        <input type="text" class="form-control" id="age" name="age">
                    </div>
                    <div class="mb-3">
                        <label for="fees" class="form-label">fees:</label>
                        <input type="text" class="form-control" id="fees" name="fees">
                    </div>
                    <center><button type="submit" class="btn btn-primary">Submit</button></center>
                </form>
            </div>
            <div class="col-sm-6 mt-5">
                <h2 class="alert alert-danger  text-center">List Of Student</h2>
                <%# show all data%>
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th scope="col">No</th>
                                <th scope="col">Name</th>
                                <th scope="col">Age</th>
                                <th scope="col">Fees</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% var i= 1%>
                            <% data.forEach((item)=>{ %>
                                <tr>
                                    <td>
                                        <%= i++%>
                                    </td>
                                    <td>
                                        <%= item.name%>
                                    </td>
                                    <td>
                                        <%= item.age%>
                                    </td>
                                    <td>
                                        <%= item.fees%>
                                    </td>
                                    <td> 
                                        <form action="/edit/<%= item._id %>" method="get">
                                            <input type="submit" class="btn btn-link" value="Edit">
                                        </form>
                                    </td>
                                    <td>
                                        <form action="/delete/<%= item._id %>" method="post" >
                                            <input type="submit" class="btn btn-link" value="Delete">
                                            <!-- <button type="button" class="btn btn-link">Delete</button> -->
                                        </form>   
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
            </div>
        </div>
    </div>

    <%- include ('./partials/footer.ejs')%>